# Boston Drone School API - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED CONFIGURATION (App won't start without these)
# ============================================

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/boston_drone_school
DATABASE_SSL=false

# Authentication (REQUIRED - App will fail to start without JWT_SECRET)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# AI Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Payment Configuration (Optional - required for accepting payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (Optional)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_key
EMAIL_FROM_ADDRESS=no-reply@thebostondroneschool.org

# File Storage (Optional)
AWS_S3_BUCKET=boston-drone-school-assets
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Security
# Accepts comma, space, newline separated values or a JSON array.
CORS_ORIGIN=https://learn.thebostondroneschool.org,https://thebostondroneschool.org
# CORS_ORIGIN=["https://learn.thebostondroneschool.org","https://thebostondroneschool.org"]

# Development overrides
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:3000